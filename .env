# ===========================================
# CONFIGURAÇÕES CENTRALIZADAS - SISTEMA OD46S
# ARQUIVO DE EXEMPLO - COPIE PARA .env
# ===========================================

# ===========================================
# BANCO DE DADOS
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=od46s_db_dev
DB_USER=od46s_user
DB_PASSWORD=1234
DB_DRIVER=org.postgresql.Driver

# ===========================================
# APLICAÇÃO
# ===========================================
APP_NAME=backend
APP_PORT=8080
APP_ADDRESS=0.0.0.0
APP_PROFILE=default

# ===========================================
# JPA/HIBERNATE
# ===========================================
JPA_DIALECT=org.hibernate.dialect.PostgreSQLDialect
JPA_DDL_AUTO=none
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
JPA_TIMEZONE=America/Sao_Paulo

# ===========================================
# LIQUIBASE
# ===========================================
LIQUIBASE_ENABLED=true
LIQUIBASE_CHANGELOG=classpath:db/changelog/db.changelog-master.yml
LIQUIBASE_DROP_FIRST=false

# ===========================================
# SEGURANÇA
# ===========================================
JWT_SECRET=od46s_super_secret_key_2025_very_long_and_secure
JWT_EXPIRATION=86400000
BCRYPT_STRENGTH=10

# ===========================================
# MINIO (Armazenamento de Arquivos)
# ===========================================
MINIO_URL=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=od46s-files

# ===========================================
# CORS
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_HIBERNATE=DEBUG
LOG_PATTERN="%d{yyyy-MM-dd HH:mm:ss} - %msg%n"
LOG_FILE_PATH=/app/logs/od46s-backend.log

# ===========================================
# UPLOAD
# ===========================================
UPLOAD_ENABLED=true
UPLOAD_MAX_FILE_SIZE=10MB
UPLOAD_MAX_REQUEST_SIZE=50MB

# ===========================================
# ACTUATOR
# ===========================================
ACTUATOR_ENABLED=true
ACTUATOR_ENDPOINTS=health,info,metrics
ACTUATOR_HEALTH_DETAILS=always

# ===========================================
# SWAGGER/OPENAPI
# ===========================================
SWAGGER_API_DOCS_PATH=/v3/api-docs
SWAGGER_UI_PATH=/swagger-ui.html
SWAGGER_UI_OPERATIONS_SORTER=method
SWAGGER_UI_TAGS_SORTER=alpha
SWAGGER_UI_TRY_IT_OUT=true

# ===========================================
# DOCKER ESPECÍFICO
# ===========================================
DOCKER_DB_HOST=postgres
DOCKER_DB_PORT=5432
DOCKER_DB_NAME=od46s_db_dev
DOCKER_DB_USER=od46s_user
DOCKER_DB_PASSWORD=1234

# ===========================================
# PGADMIN (OPCIONAL)
# ===========================================
PGADMIN_EMAIL=admin@od46s.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# ===========================================
# POOL DE CONEXÕES (DOCKER)
# ===========================================
HIKARI_MAX_POOL_SIZE=10
HIKARI_MIN_IDLE=5
HIKARI_CONNECTION_TIMEOUT=20000
HIKARI_IDLE_TIMEOUT=300000
HIKARI_MAX_LIFETIME=1200000

# ===========================================
# CACHE
# ===========================================
CACHE_TYPE=simple

# ===========================================
# SESSION
# ===========================================
SESSION_STORE_TYPE=none
MINIO_URL_DOCKER=http://minio:9000
