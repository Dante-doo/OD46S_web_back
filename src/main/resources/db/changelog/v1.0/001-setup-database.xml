<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="001-setup-database" author="od46s-dev">
        <comment>Configurações iniciais do PostgreSQL - extensões e configurações</comment>
        
        <!-- Criar extensões necessárias -->
        <sql>CREATE EXTENSION IF NOT EXISTS "uuid-ossp";</sql>
        
        <!-- Configurações específicas do PostgreSQL -->
        <sql>ALTER DATABASE od46s_db_dev SET timezone TO 'America/Sao_Paulo';</sql>
        
        <!-- Comentário informativo -->
        <sql>COMMENT ON DATABASE od46s_db_dev IS 'Sistema OD46S - Coleta de Lixo Urbano v1.0';</sql>

        <rollback>
            <sql>DROP EXTENSION IF EXISTS "uuid-ossp";</sql>
            <sql>ALTER DATABASE od46s_db_dev RESET timezone;</sql>
            <sql>COMMENT ON DATABASE od46s_db_dev IS NULL;</sql>
        </rollback>
    </changeSet>

</databaseChangeLog>
